{{ 'video-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}

{%- liquid
  assign video_preload = false
  if section.index == 1
    assign video_preload = true
  endif


-%}

<div
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} {{ section.settings.classes }} {% if section.settings.display_desktop == true %}display-desktop{% endif %} {% if section.settings.display_mobile == true %}display-mobile{% endif %}">
  <div class="page-width">
    <div
      class="video-with-text video-with-text--{{ section.settings.content_layout }} isolate video-with-text--{{ section.settings.content_layout }}">
      <div
        class="video-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} video-with-text__grid--reverse{% endif %}">
        <div
          class="video-with-text__media-item video-with-text__media-item--full-width grid__item video-with-text__media-item--{{ section.settings.desktop_image_width }}">
          {%- if section.settings.video != blank -%}
            {%- if section.settings.video_link != blank -%}
              <a href="{{ section.settings.video_link }}" class="video-link">
                {{ section.settings.video | video_tag: image_size: '600x', autoplay: true, controls: false, muted: true, loop: true, class: 'video-with-text__media global-media-settings', preload: video_preload }}
              </a>
            {%- else -%}
              {{ section.settings.video | video_tag: image_size: '600x', autoplay: true, controls: false, muted: true, loop: true, class: 'video-with-text__media global-media-settings', preload: video_preload }}
            {%- endif -%}
          {%- endif -%}
        </div>

        <div class="video-with-text__text-item grid__item">
          <div class="container">
            <div
              id="VideoWithText--{{ section.id }}"
              class="video-with-text__content video-with-text__media-item--{{ section.settings.desktop_content_position }} video-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} video-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} content-container gradient color-{{ section.settings.section_color_scheme }}"
            >
              {%- for block in section.blocks -%}
                {% case block.type %}
                  {%- when 'heading' -%}
                    <h2
                      class="video-with-text__heading inline-richtext heading {{ block.settings.heading_size }}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.heading }}
                    </h2>
                  {%- when 'caption' -%}
                    <p
                      class="video-with-text__text video-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.caption | escape }}
                    </p>
                  {%- when 'text' -%}
                    <div
                      class="video-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                      {{ block.settings.text }}
                    </div>
                {%- endcase -%}
              {%- endfor -%}

              <div class="video-with-text__buttons">
                {%- for block in section.blocks -%}
                  {% case block.type %}
                    {%- when 'button' -%}
                      {%- if block.settings.button_label != blank -%}
                        <a
                          {% if block.settings.button_link == blank %}
                            role="link" aria-disabled="true"
                          {% else %}
                            href="{{ block.settings.button_link }}"
                          {% endif %}
                          class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                          {{ block.shopify_attributes }}
                        >
                          {{ block.settings.button_label | escape }}
                        </a>
                      {%- endif -%}
                  {%- endcase -%}
                {%- endfor -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video with Text",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "url",
      "id": "video_link",
      "label": "Video Link (Optional)"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "video_first",
      "options": [
