<link rel="stylesheet" href="{{ 'custom-values.css' | asset_url }}">
<section class="section" data-section-id="{{ section.id }}" data-section-type="values">
    <div class="container">
      <div class="section-header text-center">
        <h2>{{ section.settings.title }}</h2>
      </div>
      <div class="values">
        {% for block in section.blocks %}
          <div class="value 1/3--lap 1/3--desk 1/3--wide">
            <div class="value-inner">
              <div class="value__image">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
              </div>
              <div class="value__text">
                <h3 class="value__title">{{ block.settings.title }}</h3>
                <p class="value__description">{{ block.settings.text }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</section>

{% schema %}
{
  "name": "Custom Values",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Custom Values"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Value Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Value Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom Values"
    }
  ]
}
{% endschema %}