<link rel="stylesheet" href="{{ 'custom-team.css' | asset_url }}">
<section class="section" data-section-id="{{ section.id }}" data-section-type="custom-team">
  <div class="container">
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
    </div>
    <div class="scroller">
      <div class="scroller__inner">
        <div class="custom-team">
          {% for block in section.blocks %}
            <div class="custom-team-member 1/3--lap 1/3--desk 1/3--wide">
              <div class="custom-team-member-inner">
                <div class="custom-team-member__image">
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
                </div>
                <div class="custom-team-member__text">
                  <h3 class="custom-team-member__title">{{ block.settings.title }}</h3>
                  <p class="custom-team-member__description">{{ block.settings.text }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member Name"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role",
          "default": "Team Member Role"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Text",
          "default": "Team Member Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom Team"
    }
  ]
}
{% endschema %}