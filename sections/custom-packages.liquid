<link rel="stylesheet" href="{{ 'custom-packages.css' | asset_url }}">
<section class="section" data-section-id="{{ section.id }}" data-section-type="html">
  <div class="container">
    <div class="html rte">
      {%- if section.settings.show_filter -%}
        <div class="filter-container">
          <div class="filter-container-inner">
            {% assign product_types_array = "" %}
            {%- for block in section.blocks -%}
              {% assign product_types_array = product_types_array | append: block.settings.product_type | append: "," %}
            {%- endfor -%}
            {%- assign product_types_array = product_types_array | split: "," | uniq %}

            {%- for type in product_types_array -%}
              {% if forloop.first %}
                <button class="filter-button filter-button--active button"
                        data-filter="package-box--{{ type | downcase | replace: ' ', '-' }}">{{ type }}</button>
              {% else %}
                <button class="filter-button button"
                        data-filter="package-box--{{ type | downcase | replace: ' ', '-' }}">{{ type }}</button>
              {% endif %}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
      {% assign count = 0 %}
      {% for block in section.blocks %}
        {% assign count = count | plus: 1 %}
      {% endfor %}
      <div class="package-container {% if section.settings.show_filter %} package-container--with-filter {% endif %} {% if count <= 2 %}two-columns{% endif %}">
        {%- for block in section.blocks -%}
        {%- if section.settings.show_filter -%}
        <div class="package-box package-box--{{ block.settings.product_type | downcase | replace: ' ', '-' }}">
          {%- else -%}
          <div class="package-box">
            {%- endif -%}
            <div class="package-icon">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | img_url: '100x100' }}" alt="icon">
              {%- endif -%}
            </div>
            <div class="title-container">
              <div class="package-title">{{ block.settings.title }}</div>
            </div>
            <div class="package-price">{{ block.settings.price }}</div>
            <a href="{{ block.settings.url }}" class="learn-more-button button">
              {{ block.settings.button_title }}
            </a>
            <p class="bold-paragraph">{{ block.settings.description_title }}</p>
            <div class="package-description">{{ block.settings.description }}</div>
          </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
</section>
{% schema %}
{
  "name": "Custom Packages",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_filter",
      "label": "Show filter",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "product_type",
          "label": "Product type",
          "default": "Packages",
          "info": "This is used to filter the products. Use: 'Individual Services', 'Packages', 'Subscription Plans' etc."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Package Name"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$300"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "button_title",
          "label": "Title",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "header",
          "content": "Description"
        },
        {
          "type": "text",
          "id": "description_title",
          "label": "Title",
          "default": "Resume + Cover Letter"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<ul><li>A custom resume designed to highlight your experience and skills</li><li>A personalised cover letter tailored to the job youâ€™re applying for</li><li>LinkedIn profile optimisation to boost recruiter visibility</li></ul>"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Products",
      "name": "Custom Packages"
    }
  ]
}
{% endschema %}