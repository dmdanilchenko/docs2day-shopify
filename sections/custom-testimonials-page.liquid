<link rel="stylesheet" href="{{ 'custom-testimonials.css' | asset_url }}">
<section class="section" data-section-id="{{ section.id }}" data-section-type="testimonials-page">
  <div class="container">
    <div class="testimonials testimonials--page hidden">
      <div class="testimonials--page-inner">
        <div class="testimonials--row">
          {% for block in section.blocks %}
            {% assign loopindex = forloop.index | modulo: 2 %}
            {% if loopindex == 1 %}
              <div class="testimonial">
                <div class="testimonial-inner">
                  <div class="testimonial__stars">
                    {% for i in (1..5) %}
                      {% if i <= block.settings.stars %}
                        {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--full' -%}
                      {% else %}
                        {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--empty' -%}
                      {% endif %}
                    {% endfor %}
                  </div>
                  <div class="testimonial__text">{{ block.settings.text }}</div>
                  <div class="testimonial__author-info">
                    <p class="testimonial__author">— {{ block.settings.author }}</p>
                    <p class="testimonial__author-title">{{ block.settings.author_title }}</p>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="testimonials--row">
          {% for block in section.blocks %}
            {% assign loopindex = forloop.index | modulo: 2 %}
            {% if loopindex == 0 %}
              <div class="testimonial">
                <div class="testimonial-inner">
                  <div class="testimonial__stars">
                    {% for i in (1..5) %}
                      {% if i <= block.settings.stars %}
                        {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--full' -%}
                      {% else %}
                        {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--empty' -%}
                      {% endif %}
                    {% endfor %}
                  </div>
                  <div class="testimonial__text">{{ block.settings.text }}</div>
                  <div class="testimonial__author-info">
                    <p class="testimonial__author">— {{ block.settings.author }}</p>
                    <p class="testimonial__author-title">{{ block.settings.author_title }}</p>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    {% if section.blocks.size > 4 %}
      <div class="testimonials__cta">
        <a href="{{ section.settings.cta_link }}"
           class="testimonials--show-all button button--primary">{{ section.settings.cta_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Testimonials Page",
  "settings": [
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "View All"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "stars",
          "min": 1,
          "max": 5,
          "default": 5,
          "label": "Stars",
          "step": 1,
          "info": "Select the number of stars"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Love the simplicity of the service and the prompt customer support. We can’t imagine working without it."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Renee Wells"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author Title",
          "default": "Product Designer, Quotient"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom Testimonials Page"
    }
  ]
}
{% endschema %}