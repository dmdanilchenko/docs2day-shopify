<link rel="stylesheet" href="{{ 'custom-testimonials.css' | asset_url }}">
{%- capture section_settings -%}
  {
  "autoPlay": {{ section.settings.autoplay | json }},
  "cycleSpeed": {{ section.settings.cycle_speed | times: 1000 | json }}
  }
{%- endcapture -%}
<section class="section" data-section-id="{{ section.id }}" data-section-type="testimonials" data-section-settings="{{ section_settings | escape_once }}">
  <div class="container container--testimonials">
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
    </div>
    <div class="scroller">
      <div class="scroller__inner">
        <div class="testimonials product-list product-list product-list--vertical product-list--scrollable">
          {% for block in section.blocks %}
            <div class="testimonial product-item product-item--vertical 1/3--lap 1/3--desk 1/3--wide">
              <div class="testimonial-inner">
                <div class="testimonial__stars">
                  {% for i in (1..5) %}
                    {% if i <= block.settings.stars %}
                      {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--full' -%}
                    {% else %}
                      {%- render 'icon' with 'rating-star', class: 'rating__star rating__star--empty' -%}
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="testimonial__text">{{ block.settings.text }}</div>
                <div class="testimonial__author-info">
                  <p class="testimonial__author">— {{ block.settings.author }}</p>
                  <p class="testimonial__author-title">{{ block.settings.author_title }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Testimonials"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#444CE7"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto rotate between slides",
      "default": true
    },
    {
      "type": "range",
      "id": "cycle_speed",
      "min": 3,
      "max": 8,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "stars",
          "min": 1,
          "max": 5,
          "default": 5,
          "label": "Stars",
          "step": 1,
          "info": "Select the number of stars"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Love the simplicity of the service and the prompt customer support. We can’t imagine working without it."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Renee Wells"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author Title",
          "default": "Product Designer, Quotient"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom Testimonials"
    }
  ]
}
{% endschema %}